<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>

            <div class="table-response">
            <% if (users != '') { %>
                <table class="table table-striped text-center my-3">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>E-mail</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% users.forEach((row, index) => { %>
                            <tr class="align-middle">
                                <tr><$= index %></tr>
                                <tr><img src="<%= row.image %>" width="50" class="img-thumnail" alt="" /></tr>
                                <tr><$= row.name %></tr>
                                <tr><%= row.email %></tr>
                                <tr><%= row.phone %></tr>
                                <tr>
                                    <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>

                                    

                                    <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </tr>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else {%>
                <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
            <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>